<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_height="match_parent"
                android:padding="2dp"
                android:layout_width="match_parent">
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical"
                  android:padding="5dp">
        <LinearLayout style="@style/NotClickableSummaryItem">
            <TextView style="@style/SummaryHeader"
                      android:text="@string/add_cohort_prefixes"/>
            <TextView
                    android:textColor="@android:color/white"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/add_cohort_pref_desc">
            </TextView>
        </LinearLayout>
        <include layout="@layout/activity_cohort_pref"/>
    </LinearLayout>

    <LinearLayout style="@style/ButtonRow"
                  android:layout_alignParentBottom="true">
        <Button
                android:id="@+id/next"
                style="@style/Button.Next"/>
    </LinearLayout>
</RelativeLayout>


