<?xml version="1.0" encoding="utf-8"?>

<com.muzima.view.CheckedLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/list_multi_selector_blue"
              android:layout_marginBottom="3dp"
              android:layout_marginTop="3dp"
              android:orientation="horizontal">

    <ImageView
            android:id="@+id/genderImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:contentDescription="Gender Image"/>

    <com.muzima.view.CheckedLinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:background="@drawable/list_multi_selector_blue"
            android:layout_marginTop="3dp"
            android:orientation="vertical">

        <CheckedTextView
                android:id="@+id/name"
                android:background="@drawable/list_multi_selector_blue"
                style="@style/ListHeader"/>

        <com.muzima.view.CheckedLinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:layout_marginRight="7dp"
                android:orientation="horizontal">

            <CheckedTextView
                    android:id="@+id/dateOfBirth"
                    android:background="@drawable/list_multi_selector_blue"
                    style="@style/ListDescription"
                    android:layout_width="0dp"
                    android:layout_weight=".7"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/secondary_text"/>

            <CheckedTextView
                    android:id="@+id/identifier"
                    style="@style/ListDescription"
                    android:background="@drawable/list_multi_selector_blue"
                    android:layout_width="0dp"
                    android:layout_weight=".3"
                    android:gravity="right"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/secondary_text"/>
        </com.muzima.view.CheckedLinearLayout>
    </com.muzima.view.CheckedLinearLayout>
</com.muzima.view.CheckedLinearLayout>