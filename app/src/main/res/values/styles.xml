        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:textColor">@color/primary_blue</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!--Feedback and help dialog -->
    <style name="MessageActivityLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="MessageActivityText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">?attr/primaryTextColor</item>
    </style>

    <style name="MessageActivityButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="TabLayoutStyle" parent="Base.Widget.Design.TabLayout">
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="bottom_nav_active_text">
        <item name="android:textColor">#137EFE</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="bottom_nav_inactive_text">
        <item name="android:textColor">?attr/menu_inactive_text_color</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TabLayoutTextStyle">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Base_ToolbarStyle">
        <item name="android:background">?attr/primaryBackgroundColor</item>
        <item name="android:theme">@style/Base_ToolbarTheme</item>
        <item name="titleTextAppearance">@style/CustomTitleTextAppearance</item>
        <item name="subtitleTextAppearance">@style/CustomSubTitleTextAppearance</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="colorControlNormal">?attr/toolbarTitleTextColor</item>
    </style>

    <style name="Base_ToolbarTheme">
        <item name="android:textColorPrimary">?attr/toolbarTitleTextColor</item>
        <item name="android:textColorSecondary">?attr/toolbarTitleTextColor</item>
    </style>

    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">?attr/toolbarTitleTextColor</item>
    </style>

    <style name="CustomTitleTextAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/toolbarTitleTextColor</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomSubTitleTextAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?attr/toolbarTitleTextColor</item>
        <item name="android:textStyle">italic</item>
    </style>

</resources>
