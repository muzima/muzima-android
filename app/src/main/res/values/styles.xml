<resources xmlns:tools="http://schemas.android.com/tools"
           xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="windowActionModeOverlay">true</item>
    </style>
    <style name="AppTheme.NoActionBar" parent="AppBaseTheme.NoActionBar">
        <item name="windowActionModeOverlay">true</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme.Light" parent="AppBaseTheme.Light">
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="AppTheme.Light.NoActionBar" parent="AppBaseTheme.Light.NoActionBar">
    </style>

    <style name="Widget.Custom.NavigationView" parent="Widget.Design.NavigationView">
        <item name="itemIconTint">?attr/colorNavigationItem</item>
        <item name="itemTextColor">?attr/colorNavigationItem</item>
        <item name="itemBackground">@drawable/menu_background_color_state</item>
    </style>

    <style name="DashboardWrapper">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">0dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">?attr/themeColor</item>
    </style>

    <style name="DashboardTableContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="alertDialogTheme" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="android:windowTitleStyle">@style/alertTitleTextStyle</item>
        <item name="android:background">?attr/drawerBackgroundColor</item>
        <item name="android:textColor">?attr/primaryTextColor</item>
        <item name="android:textColorSecondary">?attr/primaryTextColor</item>
        <item name="android:colorAccent">@color/primary_blue</item>
    </style>

    <style name="alertDialogThemeLight" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="android:windowTitleStyle">@style/alertTitleTextStyle</item>
        <item name="android:background">?attr/drawerBackgroundColor</item>
        <item name="android:textColor">?attr/primaryTextColor</item>
        <item name="android:textColorSecondary">?attr/primaryTextColor</item>
        <item name="android:colorAccent">@color/primary_blue</item>
    </style>

    <style name="alertTitleTextStyle">
        <item name="android:textColor">@color/primary_blue</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
    </style>

    <style name="WizardContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="setupMethodConfigurationsList">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="SummaryHeader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">3dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primary_white</item>
    </style>

    <style name="NotClickableSummaryItem">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="AutocompleteTextArea">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">?attr/primaryBackgroundColor</item>
    </style>

    <style name="ButtonRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="DividerLine">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/primary_blue</item>
    </style>

    <style name="ListHeader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/primaryTextColor</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <style name="ListDescription">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:textColor">?attr/primaryTextColor</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <style name="FormSaveDateTime">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">right</item>
        <item name="android:textColor">?attr/primaryTextColor</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!--Login Screen-->
    <style name="LoginActivityLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="LoginActivityHeader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">?attr/primaryTextColor</item>
        <item name="android:textSize">30sp</item>
        <item name="android:typeface">normal</item>
        <item name="android:text">@string/app_title</item>
    </style>

    <style name="LoginActivityDivider.Style">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:background">?attr/loginDividerBackgroundColor</item>
    </style>

    <style name="LoginActivityDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:background">?attr/loginDividerBackgroundColor</item>
    </style>

    <style name="LoginInfoLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/login_layout_background</item>
    </style>

    <style name="LoginInfoEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textColor">@color/primary_blue</item>
        <item name="android:textColorHint">@color/hint_text_grey</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:typeface">normal</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:textCursorDrawable" tools:ignore="NewApi">@null</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="LoginButtonLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:layout_marginEnd">12dp</item>
    </style>

    <style name="LoginButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/primary_white</item>
    </style>

    <style name="Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">6dp</item>
        <item name="android:text">A Button</item>
    </style>

    <style name="Button.Next">
        <item name="android:background">@drawable/next_button_selector</item>
        <item name="android:text">@string/general_next</item>
    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="LoginAuthenticatingButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/primary_white</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:layout_marginStart">6dp</item>
        <item name="android:layout_marginEnd">6dp</item>
    </style>

    <style name="MuzimaListView" parent="@android:style/Widget.ListView">
        <item name="android:background">?attr/primaryBackgroundColor</item>
        <item name="android:divider">@drawable/divider</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:listSelector">@null</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="NoItemInListView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/primary_blue</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="MuzimaSelectableListView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/primary_blue</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="ListViewSelectableText">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">?attr/primaryTextColor</item>
        <item name="font">@font/montserrat_black</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="ListViewText">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingRight">6dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">?attr/primaryTextColor</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <style name="CaptionEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/primary_blue</item>
        <item name="android:textColorHint">@color/hint_text_grey</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:typeface">normal</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:textCursorDrawable" tools:ignore="NewApi">@null</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="LoginInfoQuestion">
        <item name="android:layout_margin">6dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Versiontext">
        <item name="android:paddingTop">10dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?attr/primaryTextColor</item>
    </style>

    <style name="ConfidentialityText">
        <item name="android:paddingTop">10dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?attr/primaryTextColor</item>
    </style>

    <style name="SetUpLogList">
        <item name="android:textSize">14sp</item>
        <item name="font">@font/roboto_regular</item>
    </style>

    <style name="NoDataView">
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <style name="NoDataMsg">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">?attr/primaryTextColor</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="NoDataTip">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/primaryTextColor</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto_light</item>
    </style>

    <style name="ClickableText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:textColor">@color/primary_blue</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!--Feedback and help dialog -->
    <style name="MessageActivityLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="MessageActivityText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">?attr/primaryTextColor</item>
    </style>

    <style name="MessageActivityButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="bottom_nav_active_text">
        <item name="android:textColor">#137EFE</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="bottom_nav_inactive_text">
        <item name="android:textColor">?attr/menu_inactive_text_color</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">?attr/toolbarTitleTextColor</item>
    </style>

    <style name="DialogNoTitleBar" parent="android:style/Theme.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="AboutMuzimaContentHeader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@color/primary_blue</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <style name="AboutMuzimaContentDetails">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:textColor">?attr/secondaryTextColor</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <style name="AboutMuzimaContentDividerLine">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/hint_text_grey</item>
    </style>

    <style name="MyToolbarTheme" parent="@style/ThemeOverlay.AppCompat.Light">
        <item name="colorControlNormal">#1A3963</item>
        <item name="titleTextColor">#1C3B65</item>
        <item name="android:textColorPrimary">#1C3B65</item>
        <item name="android:textColorSecondary">#1C3B65</item>
        <item name="actionMenuTextColor">#1C3B65</item>
    </style>

    <style name="input_labels">
        <item name="android:textColor">@color/input_labels</item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">10dp</item>
        <item name="android:padding">4dp</item>
        <item name="android:layout_marginBottom">6dp</item>
    </style>

    <style name="display_labels">
        <item name="android:textColor">@color/input_labels</item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">13dp</item>
        <item name="android:padding">4dp</item>
        <item name="android:layout_marginBottom">6dp</item>
    </style>

    <style name="bottom_spinner_style" parent="android:Widget.Spinner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/spinner_normal</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">50dp</item>
        <item name="android:popupBackground">@color/spinner_back_color</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:textSize">15sp</item>
    </style>
</resources>
