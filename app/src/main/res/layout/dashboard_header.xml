<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="?attr/primaryBackgroundColor"
    android:layout_width="match_parent"
    android:layout_height="80dp">

    <TextView
        android:id="@+id/dashboard_header_title_text_view"
        android:layout_above="@+id/top_nav_divider"
        android:text="@string/provider_name_general"
        android:textSize="21sp"
        android:textColor="?attr/primaryTextColor"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <View
        android:id="@+id/top_nav_divider"
        android:layout_alignParentBottom="true"
        android:background="@color/hint_text_grey_opaque"
        android:layout_width="match_parent"
        android:layout_height="0.6dp"/>

</RelativeLayout>
