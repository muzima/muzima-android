<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    style="@style/AppBaseTheme.Light.NoActionBar"
    tools:context="com.muzima.view.htc.HTCFormActivity">
    <include layout="@layout/app_bar" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="12dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
            >

                <LinearLayout
                        android:id="@+id/identification_data"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/shape_normal"
                        android:paddingVertical="6dp"
                        android:layout_marginVertical="10dp"
                        android:orientation="horizontal">

                    <TextView
                            android:layout_width="@dimen/dimen_0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="8"
                            android:text="@string/htc_identification_data"
                            android:textColor="@color/white"
                            android:textSize="15sp"
                            android:drawableLeft="@drawable/baseline_contact_page_24"
                            android:gravity="center_vertical|left"
                            android:paddingLeft="10dp"/>
                    <ImageButton
                            android:id="@+id/btn_identification_data"
                            android:layout_width="@dimen/dimen_0dp"
                            android:layout_height="match_parent"
                            android:background="@color/background_layout"
                            android:src="@drawable/sharp_arrow_drop_up_24"
                            android:layout_marginRight="@dimen/dimen_2dp"
                            android:layout_weight="1"/>
                </LinearLayout>

                <LinearLayout
                        android:id="@+id/identification_data_lyt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="4dp">
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="4dp">
                        <ImageView
                            android:id="@+id/genderImg"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            bind:srcCompat="@drawable/gender_female"/>
                    <LinearLayout
                        android:layout_width="@dimen/dimen_0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/htcFullName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Antonia Luis Matos"
                            android:textSize="14dp"
                            android:textColor="#424242"
                            android:layout_marginBottom="6dp"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/htcNID"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="0269010879/3008/12222"
                            android:textSize="11dp"
                            android:textColor="#389b3c"
                            android:textStyle="bold"/>
                    </LinearLayout>


                    <TextView
                            android:id="@+id/htcAge"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:padding="5dp"
                            android:layout_height="match_parent"
                            android:text="Idade"
                            style="@style/display_labels"
                    />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                        android:id="@+id/book_info_data"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/shape_normal"
                        android:paddingVertical="6dp"
                        android:layout_marginVertical="10dp"
                        android:orientation="horizontal">

                    <TextView
                            android:layout_width="@dimen/dimen_0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="8"
                            android:text="@string/htc_book_info"
                            android:textColor="@color/white"
                            android:textSize="15sp"
                            android:drawableLeft="@drawable/baseline_contact_page_24"
                            android:gravity="center_vertical|left"
                            android:paddingLeft="10dp"/>
                    <ImageButton
                            android:id="@+id/btn_book_data"
                            android:layout_width="@dimen/dimen_0dp"
                            android:layout_height="match_parent"
                            android:background="@color/background_layout"
                            android:src="@drawable/sharp_arrow_drop_up_24"
                            android:layout_marginRight="@dimen/dimen_2dp"
                            android:layout_weight="1"/>
                </LinearLayout>

                <LinearLayout
                        android:id="@+id/book_info_data_lyt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="4dp">

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/book_number"
                            style="@style/input_labels"
                    />
                    <EditText
                            android:id="@+id/bookNumber"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:textColor="#000"
                            android:padding="6dp"
                            android:background="@drawable/fields_background"/>
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/book_page_number"
                            style="@style/input_labels"
                    />
                    <EditText
                            android:id="@+id/bookPageNumber"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:textColor="#000"
                            android:padding="6dp"
                            android:background="@drawable/fields_background"/>
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/book_page_line"
                            style="@style/input_labels"
                    />
                    <EditText
                            android:id="@+id/bookPageLine"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:textColor="#000"
                            android:padding="6dp"
                            android:background="@drawable/fields_background"/>
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/testing_sector"
                            style="@style/input_labels"
                    />
                    <Spinner
                            android:id="@+id/testingSectors"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/bottom_spinner_style"/>

                </LinearLayout>


                <LinearLayout
                        android:id="@+id/testing_data"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/shape_normal"
                        android:paddingVertical="6dp"
                        android:layout_marginVertical="10dp"
                        android:orientation="horizontal">

                    <TextView
                            android:layout_width="@dimen/dimen_0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="8"
                            android:text="@string/ats_testing_data"
                            android:textColor="@color/white"
                            android:textSize="15sp"
                            android:drawableLeft="@drawable/baseline_contact_page_24"
                            android:gravity="center_vertical|left"
                            android:paddingLeft="10dp"/>
                    <ImageButton
                            android:id="@+id/btn_ats_testing_data"
                            android:layout_width="@dimen/dimen_0dp"
                            android:layout_height="match_parent"
                            android:background="@color/background_layout"
                            android:src="@drawable/sharp_arrow_drop_up_24"
                            android:layout_marginRight="@dimen/dimen_2dp"
                            android:layout_weight="1"/>
                </LinearLayout>

                <LinearLayout
                        android:id="@+id/ats_testing_data_lyt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="4dp">
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/testing_date"
                            style="@style/input_labels"
                    />

                    <EditText
                            android:id="@+id/testingDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:focusableInTouchMode="false"
                            android:text=""
                            android:textColor="#000"
                            android:padding="6dp"
                            android:background="@drawable/fields_background"
                    />

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/pop_keys_miners"
                            style="@style/input_labels"
                    />
                    <Spinner
                            android:id="@+id/popKeysMiners"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/bottom_spinner_style"/>

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/index_case_contacts"
                            style="@style/input_labels"
                    />
                    <Spinner
                            android:id="@+id/indexCaseContacts"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/bottom_spinner_style"/>

                    <CheckBox
                            android:id="@+id/selfTestConfirmation"
                            android:buttonTint="?attr/primaryTextColor"
                            android:layout_marginTop="12dp"
                            android:text="@string/self_test_confirmation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/hiv_positive_results"
                            style="@style/input_labels"
                    />
                    <EditText
                            android:id="@+id/hivPositiveResult"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:text="Positivo - Masculino - [25-49]"
                            android:textColor="#000"
                            android:padding="6dp"
                            android:enabled="false"
                            android:background="@drawable/fields_background"/>

                </LinearLayout>


                <LinearLayout
                        android:id="@+id/historical_testing_data"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/shape_normal"
                        android:paddingVertical="6dp"
                        android:layout_marginVertical="10dp"
                        android:orientation="horizontal">

                    <TextView
                            android:layout_width="@dimen/dimen_0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="8"
                            android:text="@string/historical_testing_data"
                            android:textColor="@color/white"
                            android:textSize="15sp"
                            android:drawableLeft="@drawable/baseline_contact_page_24"
                            android:gravity="center_vertical|left"
                            android:paddingLeft="10dp"/>
                    <ImageButton
                            android:id="@+id/btn_historical_testing_data"
                            android:layout_width="@dimen/dimen_0dp"
                            android:layout_height="match_parent"
                            android:background="@color/background_layout"
                            android:src="@drawable/sharp_arrow_drop_up_24"
                            android:layout_marginRight="@dimen/dimen_2dp"
                            android:layout_weight="1"/>
                </LinearLayout>

                <LinearLayout
                        android:id="@+id/historical_testing_data_lyt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="10dp"
                        android:orientation="horizontal"
                        android:padding="4dp">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="10dp"
                            android:orientation="horizontal">

                        <RadioGroup
                                android:id="@+id/historical_testing_data_group"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:orientation="horizontal">

                            <RadioButton
                                    android:id="@+id/firstTimeTestedOption"
                                    android:layout_weight="2"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:layout_width="@dimen/dimen_0dp"
                                    android:layout_height="wrap_content"
                                    android:text="@string/first_time_testing" />

                            <RadioButton
                                    android:id="@+id/pastPositiiveOption"
                                    android:layout_weight="2"
                                    android:layout_width="@dimen/dimen_0dp"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:layout_height="wrap_content"
                                    android:text="@string/positive_in_the_past" />
                        </RadioGroup>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                        android:id="@+id/additional_information_data"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/shape_normal"
                        android:paddingVertical="6dp"
                        android:layout_marginVertical="10dp"
                        android:orientation="horizontal">

                    <TextView
                            android:layout_width="@dimen/dimen_0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="8"
                            android:text="Informação Adicional"
                            android:textColor="@color/white"
                            android:textSize="15sp"
                            android:drawableLeft="@drawable/baseline_info_24"
                            android:gravity="center_vertical|left"
                            android:paddingLeft="10dp"/>

                    <ImageButton
                            android:id="@+id/btn_additional_information_data"
                            android:layout_width="@dimen/dimen_0dp"
                            android:layout_height="match_parent"
                            android:background="@color/background_layout"
                            android:src="@drawable/sharp_arrow_drop_up_24"
                            android:layout_marginRight="@dimen/dimen_2dp"
                            android:layout_weight="1"/>
                </LinearLayout>
                <LinearLayout
                        android:id="@+id/additional_information_lyt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="4dp">

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Data de criação"
                            android:visibility="gone"
                            style="@style/input_labels"
                    />
                    <EditText
                            android:id="@+id/dateOfCreation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:visibility="gone"
                            android:textColor="#3E3D3D"
                            android:padding="4dp"
                            android:background="@drawable/fields_background" />

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Unidade Sanitária"
                            style="@style/input_labels"
                    />
                    <EditText
                            android:id="@+id/healthFacility"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:textColor="#3E3D3D"
                            android:padding="4dp"
                            android:background="@drawable/fields_background" />

                </LinearLayout>

                <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right">

                    <ImageView
                            android:id="@+id/saveHtcForm"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_gravity="right"
                            android:layout_marginStart="18dp"
                            android:layout_marginTop="18dp"
                            android:layout_marginEnd="0dp"
                            android:layout_marginBottom="18dp"
                            android:background="@drawable/button_shape"
                            app:srcCompat="@drawable/ic_done"/>
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>