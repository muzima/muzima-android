<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="?attr/themeColor"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:contentDescription="@string/SHR_card_text"
            android:layout_margin="8dp"
            android:src="@drawable/ic_action_no_shr_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="?attr/primaryTextColor"
            android:textSize="16sp"
            android:layout_marginTop="4dp"
            android:text="@string/patient_SHR_search_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <View
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/holo_blue_bright"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <TextView
        android:id="@+id/patent_dialog_message_textview"
        android:textColor="?attr/primaryTextColor"
        android:layout_margin="4dp"
        android:padding="8dp"
        android:textAlignment="center"
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_marginTop="1dp"
        android:layout_below="@+id/patent_dialog_message_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_margin="4dp"
            android:orientation="horizontal"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/yes_SHR_search_dialog"
                android:background="@color/theme_color"
                android:text="@string/general_yes"
                android:textColor="?attr/primaryTextColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/no_SHR_search_dialog"
                android:background="@color/theme_color"
                android:text="@string/general_no"
                android:textColor="?attr/primaryTextColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
